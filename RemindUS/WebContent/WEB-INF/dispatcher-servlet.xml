<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
							http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
							http://www.springframework.org/schema/context 
							http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping" />
	
	<bean name="/login" class="com.doa.controllers.LoginController" />			
	
    <bean name="/route" class="com.doa.controllers.LoginController" />
	<bean name="/**" class="com.doa.controllers.LoginController" />	
	<bean name="/logout" class="com.doa.controllers.LoginController" />	
	
   <bean name="/insertVendorNames" class="com.doa.controllers.SadminController" />	   
  
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="./pages/" />
		<property name="suffix" value=".jsp" />
	</bean>
	
	
</beans>